<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.potikorn.testcoopapp.fragment.FragmentMovie">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textMoviePopular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/moviesButton"
                android:layout_marginTop="2dp"
                android:padding="10sp"
                android:text="@string/popular"
                android:textStyle="bold"
                tools:ignore="UnknownIdInLayout" />


            <TextView
                android:id="@+id/seeAllPopular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:padding="10sp"
                android:text="SeeAll"
                android:textStyle="bold"
                tools:ignore="UnknownIdInLayout" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/televisionList"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginTop="5dp"
            android:padding="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textMovieTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="@string/top_rate"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seeAllTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:padding="10sp"
                android:text="SeeAll"
                android:textStyle="bold" />


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/televisionList2"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginTop="5dp"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Genres"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/genresList"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginTop="5dp"
            android:padding="10dp" />


    </LinearLayout>
</ScrollView>