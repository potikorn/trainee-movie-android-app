<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/movies_layout"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/appbarlayout"
        android:layout_marginTop="2dp"
        tool:ignore="UnknownId">

        <ImageView
            android:id="@+id/tvPosterDetail"
            android:layout_width="150dp"
            android:layout_height="198dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/boy"
            android:contentDescription="@string/show_image" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="180sp"
            android:padding="7dp"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold"
            tool:text="ชื่อหนัง" />


        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="180sp"
            android:layout_marginTop="40sp"
            android:numStars="5"
            android:padding="7dp"
            android:stepSize="1.0"
            android:theme="@style/RatingBar" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingBar"
            android:layout_below="@+id/title"
            android:layout_marginLeft="325sp"
            android:layout_marginTop="30sp"
            android:padding="7dp"
            tool:text="45.0" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="180sp"
            android:layout_marginTop="105sp"
            android:background="#e66262"
            android:text="HD"
            android:textColor="@color/white" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="235sp"
            android:layout_marginTop="105sp"
            android:background="#5594ec"
            android:text="IMAX"
            android:textColor="@color/white" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar"
            android:layout_marginLeft="180sp"
            android:layout_marginTop="145sp"
            android:padding="7dp"
            android:paddingRight="16dp"
            android:textColor="@color/colorGreyLight"
            tool:text="วันที่" />
    </android.support.v7.widget.CardView>


</LinearLayout>